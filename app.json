{
  "expo": {
    "name": "KuryeX",
    "slug": "kuryex",
    "platforms": [
      "ios",
      "android"
    ],
    "web": {
      "enabled": false,
      "favicon": "./assets/favicon.png"
    },
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "kuryex",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*",
      "assets/sounds/**/*"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#3B82F6",
      "iosDisplayInForeground": false,
      "androidMode": "default",
      "androidCollapsedTitle": "KuryeX Bildirimi"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kuryex.app",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            },
            "ec2-16-171-131-126.eu-north-1.compute.amazonaws.com": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionRequiresForwardSecrecy": false,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSIncludesSubdomains": true
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Uygulama, profil fotoğrafı eklemeniz veya makbuz tarama gibi özellikler için kameranıza erişmek istiyor.",
        "NSPhotoLibraryUsageDescription": "Uygulama, sipariş görselleri ve profil fotoğrafları için galerinizdeki fotoğraflara erişmek istiyor.",
        "NSLocationWhenInUseUsageDescription": "Konumunuz, siparişleri harita üzerinde takip etmek ve size en yakın kuryeleri bulmak için kullanılır.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Uygulama kapalıyken bile siparişinizin durumunu ve kuryenin konumunu size bildirebilmek için konumunuza her zaman erişmemiz gerekiyor.",
        "UIBackgroundModes": [
          "remote-notification",
          "processing",
          "fetch",
          "audio",
          "remote-notification",
          "processing",
          "fetch",
          "audio"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.expo.modules.backgroundtask.processing",
          "com.expo.modules.backgroundtask.processing"
        ],
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortrait"
        ]
      }
    },
    "android": {
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDp_lLu5U3bFyMt1ggWM1p2OpblYKMQyQc"
        }
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "package": "com.kuryex.app",
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "@xml/network_security_config"
    },
    "plugins": [
      "expo-dev-client",
      "expo-router",
      "expo-splash-screen",
      "expo-secure-store",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#3B82F6",
          "sounds": [
            "./assets/sounds/ring_bell2.wav"
          ],
          "iosDisplayInForeground": false
        }
      ],
      "expo-dev-client",
      [
        "expo-image-picker",
        {
          "photosPermission": "Uygulama, sipariş görselleri ve profil fotoğrafları için galerinizdeki fotoğraflara erişmek istiyor.",
          "cameraPermission": "Uygulama, profil fotoğrafı eklemeniz veya makbuz tarama gibi özellikler için kameranıza erişmek istiyor."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useModularHeaders": true
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0",
            "packagingOptions": {
              "pickFirst": ["**/libc++_shared.so", "**/libjsc.so"]
            }
          }
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "API_HOST": "localhost",
      "API_PORT": "3000",
      "REMOTE_API_HOST": "http://kuryex.enucuzal.com",
      "USE_REMOTE": true,
      "eas": {
        "projectId": "2b9b6713-2a3b-4fc7-af89-b8b17f3a7e91"
      }
    },
    "jsEngine": "jsc",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/2b9b6713-2a3b-4fc7-af89-b8b17f3a7e91"
    }
  }
}
