{
  "name": "KuryeX",
  "main": "index.js",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "verify": "npx expo-doctor && npx expo install --check",
    "postinstall": "echo 'Installation completed'"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@stripe/stripe-react-native",
          "react-native-maps",
          "react-native-geolocation-service",
          "react-native-keyboard-aware-scroll-view",
          "react-native-maps-directions",
          "react-native-modal",
          "react-native-swiper",
          "@expo/metro-runtime",
          "@neondatabase/serverless",
          "@react-native-community/clipboard",
          "@react-native-community/masked-view",
          "@twotalltotems/react-native-otp-input",
          "expo-env",
          "flatlist-react",
          "i",
          "next",
          "react-native-uuid",
          "react-native-virtualized-view",
          "socket.io-client",
          "stripe"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.0.0",
