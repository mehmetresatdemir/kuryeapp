  "devDependencies": {
    "@types/react": "~19.0.10",
    "@types/react-native-vector-icons": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
