# Neon Database Connection
DATABASE_URL=postgres://username:password@host/database?sslmode=require

# Server Configuration
PORT=3000
NODE_ENV=production
API_HOST=0.0.0.0

# Domain Configuration
REMOTE_API_HOST=yourdomain.com
USE_REMOTE=true

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# JWT Secret Key - CHANGE THIS FOR PRODUCTION
# You can generate a secure key with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_random_string

# Optional: Admin Panel Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=secure_admin_password 